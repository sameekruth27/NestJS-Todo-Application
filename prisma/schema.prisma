generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  id Int @default(autoincrement()) @id
  title String
  desc String
  status TodoStatus
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userEmail String?
  user User? @relation(fields: [userEmail], references: [email])
}

model User {
  id Int @default(autoincrement()) @id
  email String @unique
  password String 
  name String
  todos Todo[]
}

enum TodoStatus {
  DONE
  ACTIVE
}